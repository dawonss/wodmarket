<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.flab.wodmarket.domain.category.CategoryMapper">
<resultMap id="Item" type="com.flab.wodmarket.domain.category.Category">
    <id property="categoryNo" column="category_no"/>
    <result property="categoryName" column="category_name"/>
</resultMap>

    <select id="findAll" resultType="String">
        SELECT categoryName
        FROM category
        ORDER BY categoryNo ASC
    </select>

    <update id="addName">
        UPDATE category
        SET categoryName = #{categoryName}
        WHERE categoryNo = #{categoryNo}
    </update>

    <select id="findById" parameterType="int" resultType="Category">
        SELECT categoryNo, categoryName
        FROM category
        where categoryNo = #{categoryNo}
    </select>

    <!--
       <delete id="deleteById" parameterType="int">
           DELETE
           FROM category
           WHERE categoryNo = #{categoryNo}
       </delete>
   -->

</mapper>